import static org.junit.Assert.*;

import org.junit.Test;



public class TextBuddyTest {

	@Test
	public void testExecuteCommand() {
		//to create a text file for testing
		TextBuddy.checkFileExist();
		String separator = System.getProperty("line.separator");
		
		
		assertEquals(separator+"added to mytextfile.txt : \"software eng\""+separator, TextBuddy.executeCommand("add software eng"));
		
	//	assertEquals("1. software eng",TextBuddy.executeCommand("display").);
		
	}

}
